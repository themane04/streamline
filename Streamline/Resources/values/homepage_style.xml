<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HomeLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="SearchButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:src">@drawable/search_icon_button</item>
        <item name="android:background">@drawable/search_button</item>
        <item name="android:layout_gravity">end</item>
    </style>
    <style name="MovieCardGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@id/centered_container</item>
        <item name="android:layout_marginTop">37dp</item>
        <item name="android:scrollbars">none</item>
    </style>
    <style name="FrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>
