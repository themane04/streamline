<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/RelativeLayout">
    <LinearLayout
            android:id="@+id/centered_container"
            style="@style/VLinearLayout"
            android:layout_centerInParent="true">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
        >
            <ImageView
                    style="@style/StreamlineLogo"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="15dp"/>
            <TextView
                    style="@style/StreamlineText"
                    android:layout_marginTop="0dp"
                    android:textSize="35dp"
            />
        </LinearLayout>
        <EditText
                android:hint="@string/username"
                android:id="@+id/username"
                android:inputType="text"
                style="@style/InputField"/>
        <EditText
                android:hint="@string/email"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                style="@style/InputField"/>

        <EditText
                android:hint="@string/password"
                android:id="@+id/password"
                android:inputType="textPassword"
                style="@style/InputField"
        />
        <EditText
                android:hint="@string/confirm_password"
                android:id="@+id/confirm_password"
                android:inputType="textPassword"
                style="@style/InputField"
        />
        <Button
                android:text="@string/signup"
                android:id="@+id/login_button"
                style="@style/ActionButton"
        />
        <TextView
                android:text="@string/already_have_an_account"
                android:id="@+id/already_have_an_account"
                style="@style/BeforeLinkText"
        />
        <TextView
                android:id="@+id/signin_text"
                android:text="@string/signin"
                style="@style/LinkText"
        />
    </LinearLayout>
</RelativeLayout>
