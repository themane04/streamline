<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/RelativeLayout">
    <LinearLayout
            android:id="@+id/centered_container"
            style="@style/VLinearLayout"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
    >
        <LinearLayout style="@style/HomeLinearLayout">
            <ImageView
                    style="@style/StreamlineLogo"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="15dp"
            />
            <TextView
                    style="@style/StreamlineText"
                    android:layout_marginTop="0dp"
                    android:textSize="35dp"
            />
        </LinearLayout>
        <ImageButton style="@style/SearchButton"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView" style="@style/MovieCardGrid"/>
</RelativeLayout>
